<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_gravity="center_horizontal"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_Publicacion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        android:minWidth="350dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <ImageView
                    android:id="@+id/imageView_Publicacion"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:background="#8DB9B9B9">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:background="#00FFFFFF">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_likes_publicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawable="@drawable/heart"
                            android:button="@drawable/selector_checkbox"
                            />
                        <TextView
                            android:id="@+id/textview_likes_publicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:text="0 likes"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#00FFFFFF"
                        android:layout_gravity="bottom">
                        <TextView
                            android:id="@+id/textview_nombre_publicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="18sp"
                            android:text="jhon giraldo"
                            android:textColor="#ffffff"
                            />
                    </LinearLayout>

                </LinearLayout>

        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>